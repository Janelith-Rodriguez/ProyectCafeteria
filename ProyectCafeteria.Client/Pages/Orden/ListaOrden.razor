@page "/api/Ordenes"
@inject IHttpServicio http

<h3>Lista de Orden</h3>
<br />
<a class="btn btn-primary mb-3" href="/api/Ordenes/crear">Nueva orden</a>
<br />

<!-- Tabla con estilos de Bootstrap -->
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Fecha Orden</th>
            <th>Total</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Mensaje == "")
        {
            @if (listaOrdenes == null)
            {
                <tr>
                    <td colspan="4" class="text-center">Buscando....</td>
                </tr>
            }
            else if (listaOrdenes.Count == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">No existen las órdenes</td>
                </tr>
            }
            else
            {
                @foreach (var item in listaOrdenes)
                {
                    <tr>
                        <td>@item.Fecha_Orden</td>
                        <td>@item.Total</td>
                        <td>@item.Estado</td>
                        <td>
                            <!-- Botón de Editar -->
                            <a class="btn btn-primary btn-sm me-2"
                               href="api/Ordenes/editar/@item.Id">
                                Editar
                            </a>
                            <!-- Botón de Borrar -->
                            <button class="btn btn-danger btn-sm"
                                    @onclick="() => Eliminar(item)">
                                Borrar
                            </button>
                        </td>
                    </tr>
                }
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-danger">Error: @Mensaje</td>
            </tr>
        }
    </tbody>
</table>


<Confirmacion @ref="confirmacion"
              Titulo="CUIDADO"
              textCancelar="Salir"
              onCancel="Cancelar"
              onConfirm="Borrar">
    <h5>Está por borrar la orden</h5>
    <br />
    <p>Está seguro?</p>
</Confirmacion>

@code {
    Confirmacion confirmacion;

    List<Orden> listaOrdenes;
    Orden Orden;
    string Mensaje = "";

    Orden? OrdBorrar = null;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await Leer();
    }

    private async Task Leer()
    {
        var resp = await http.Get<List<Orden>>("api/Ordenes");
        if (!resp.Error)
        {
            listaOrdenes = resp.Respuesta;
        }
        else
        {
            Mensaje = await resp.ObtenerError();
        }
    }

    private async Task Eliminar(Orden orden)
    {
        OrdBorrar = Orden;
        confirmacion.Ver();
    }

    private void Cancelar()
    {
        confirmacion.Ocultar();
        OrdBorrar = null;
    }

    private async Task Borrar()
    {
        var respuesta = await http.Delete($"api/Ordenes/{OrdBorrar.Id}");
        if (respuesta.Error)
        {
            var body = "No se pudo borrar";
        }
        Cancelar();
        await Leer();
    }
}
